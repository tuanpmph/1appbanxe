<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">
<LinearLayout
    android:layout_margin="5dp"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/inonnew"
        android:layout_weight="3"
        android:id="@+id/itemdt_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemxm_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ten San Pham"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/itemxm_idsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/itemxm_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gia: 250000"
            android:textColor="#FF0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/itemxm_mota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mo Ta"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>